{
  "name": "@hexabase/hexabase-js",
  "version": "1.0.1",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn run serve",
    "build": "yarn run build-ts && yarn run tslint",
    "serve": "node dist/index.js",
    "watch-node": "sleep 1 && nodemon dist/index.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "yarn run test:client && yarn run test:auth && yarn run test:user && yarn run test:workspace && yarn run test:application && yarn run test:datastore",
    "test:client": "yarn jest src/hexabase.test.ts",
    "test:auth": "yarn jest src/lib/packages/auth/auth.test.ts",
    "test:user": "yarn jest src/lib/packages/user/user.test.ts",
    "test:workspace": "yarn jest src/lib/packages/workspace/workspace.test.ts",
    "test:application": "yarn jest src/lib/packages/application/application.test.ts",
    "test:datastore": "yarn jest src/lib/packages/datastore/datastore.test.ts",
    "test:item": "yarn jest src/lib/packages/item/item.test.ts"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "graphql-request": "^4.2.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@types/jest": "^27.4.1",
    "graphql": "^16.3.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tslint": "^6.1.3",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  }
}
